package com.Jordan.eventmanager;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.SceneBuilder;
import javafx.scene.layout.Pane;
import javafx.stage.Stage;
import javafx.scene.control.*;
import javafx.geometry.*;

public class Main extends Application {
    
    Label response;
    
    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage myStage) {
        
        myStage.setTitle("Oceans Project");
        
        FlowPane rootNode = new FlowPane();
        
        rootNode.setAlignment(Pos.LEFT);

        Scene myScene = new Scene(rootNode, 300, 200);

        myStage.setScene(myScene);
        
        response = new Label("Seaweed in Food.");
        
        //Button Functions
        Button btnA = new Button("Uses of Seaweed in Food");
        Button btnB = new Button("Why Use Seaweed?");
        Button btnC = new Button("Economic Advantages");
        Button btnD = new Button("Types of Seaweed Used");
        Button btnE = new Button("How it is Supplied");
        
        //Responses
        btnA.setOnAction(new EventHandler<ActionEvent>() {
          public void handle (ActionEvent ae) {
            response.setText("Seaweed is used as a supplementary ingredient in salads, 
            and as one of the main ingredients in Sushi.");
        }
        });
        
        btnA.setOnAction(new EventHandler<ActionEvent>() {
          public void handle (ActionEvent ae) {
            response.setText("Seaweed 
        myStage.setFullScreen(true);
        myStage.show();
    }
}
